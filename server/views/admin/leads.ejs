<%- include('../layout', { title }) %>
<section class="section">
  <h1>Leads</h1>
  <% if (!leads.length) { %>
    <p>No leads yet.</p>
  <% } else { %>
    <table class="table">
      <thead><tr><th>Date</th><th>Name</th><th>Email</th><th>Message</th><th>IP</th></tr></thead>
      <tbody>
      <% leads.forEach(l => { %>
        <tr>
          <td><%= new Date(l.createdAt).toLocaleString() %></td>
          <td><%= l.name %></td>
          <td><%= l.email %></td>
          <td><%= l.message %></td>
          <td><%= l.ip || '' %></td>
        </tr>
      <% }) %>
      </tbody>
    </table>
  <% } %>
</section>
<%- include('../partials/footer') %>
