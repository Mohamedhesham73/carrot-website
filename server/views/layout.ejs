<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title><%= title || 'Carrot' %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <!-- PWA / install -->
<link rel="manifest" href="/manifest.webmanifest">

<!-- Android / legacy Chrome -->
<meta name="mobile-web-app-capable" content="yes">

<!-- iOS Safari (still relevant for full-screen PWAs) -->
<meta name="apple-mobile-web-app-capable" content="yes">
<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">

<!-- Address bar / OS theme colors -->
<meta name="theme-color" content="#FF7F27"><!-- fallback -->
<meta name="theme-color" media="(prefers-color-scheme: light)" content="#FF7F27">
<meta name="theme-color" media="(prefers-color-scheme: dark)"  content="#111111">


  <!-- Address bar / OS theme colors -->
  <meta name="theme-color" content="#FF7F27"><!-- fallback for older browsers -->
  <meta name="theme-color" media="(prefers-color-scheme: light)" content="#FF7F27">
  <meta name="theme-color" media="(prefers-color-scheme: dark)"  content="#111111">
  <meta name="msapplication-TileColor" content="#FF7F27"><!-- optional for Windows tiles -->

  <!-- SEO -->
  <meta name="description" content="Carrot â€” Marketing & Advertising Agency. Social, SEO, Paid, and Web that actually grows your brand." />
  <!-- Change localhost to your domain when you deploy -->
  <link rel="canonical" href="http://localhost:3000/" />
  <meta property="og:title" content="<%= title || 'Carrot â€” Marketing that Grows' %>" />
  <meta property="og:description" content="Performance-first marketing without the fluff." />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="http://localhost:3000/" />
  <meta property="og:image" content="http://localhost:3000/images/brand/cover.jpg" />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:image" content="http://localhost:3000/images/brand/cover.jpg" />

  <!-- Icons -->
  <link rel="icon" href="/images/brand/favicon.ico" sizes="any" />
  <link rel="apple-touch-icon" href="/images/brand/apple-touch-icon.png" />

  <!-- CSS: Bootstrap + AOS (dev via CDN), then your styles -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">
  <link href="/styles/styles.css" rel="stylesheet" />
</head>

<body>
  <header class="site-header sticky-top">
    <nav class="navbar navbar-expand-lg container">
      <a class="navbar-brand d-flex align-items-center" href="/">
        <img src="/images/brand/logo-navbar.png"
             alt="Carrot â€” Marketing & Advertising Agency" class="brand-logo me-2" />
        <span class="visually-hidden">Carrot</span>
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
              aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div id="mainNav" class="collapse navbar-collapse">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link <%= page==='home'?'active':'' %>" href="/">Home</a></li>
          <li class="nav-item"><a class="nav-link <%= page==='about'?'active':'' %>" href="/about">About</a></li>
          <li class="nav-item"><a class="nav-link <%= page==='services'?'active':'' %>" href="/services">Services</a></li>
          <li class="nav-item"><a class="nav-link <%= page==='portfolio'?'active':'' %>" href="/portfolio">Portfolio</a></li>
          <li class="nav-item"><a class="nav-link <%= page==='pricing'?'active':'' %>" href="/pricing">Pricing</a></li>
          <li class="nav-item"><a class="nav-link <%= page==='contact'?'active':'' %>" href="/contact">Contact</a></li>
        </ul>
        <div class="d-flex align-items-center ms-lg-3">
  <button id="themeToggle" class="btn btn-sm btn-outline-secondary" type="button" aria-label="Toggle theme">
    <span class="theme-icon" aria-hidden="true">ðŸŒ™</span>
  </button>
</div>
      </div>
    </nav>
  </header>

  <!-- Global page cover (not on Home) -->
  <% if (page !== 'home') { %>
  <section class="page-cover page-<%= page %>">
    <img src="/images/brand/cover.jpg" alt="" class="cover-img">
    <% if (!['about','services','portfolio','pricing','contact'].includes(page)) { %>
      <div class="container d-flex align-items-center h-100">
        <h1 class="h3 m-0 text-white"><%= title || 'Carrot' %></h1>
      </div>
    <% } %>
  </section>
<% } %>


